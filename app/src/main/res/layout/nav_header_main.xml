<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/side_nav_bar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="28dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/company_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/kora"
        android:scaleType="centerCrop"
        app:civ_border_width="2dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_below="@+id/company_image"
        android:id="@+id/textViewNav1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Korawan India"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_below="@+id/textViewNav1"
        android:id="@+id/textViewNav2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="2dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:text="korawanitsolution@gmail.com" />

</RelativeLayout>