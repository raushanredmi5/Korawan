<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/emsback"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminDashBoard">

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/r_1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/addEmployeeCardView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#596EE0"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Employee"
                    android:textSize="12sp"
                    android:textColor="#FFF"/>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImageProfile"
            android:layout_width="50dp"
            android:layout_marginTop="24dp"
            android:layout_height="50dp"
            android:src="@drawable/g"
            android:elevation="8dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/r_2"
        android:layout_toRightOf="@+id/r_1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/employeeListCardView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#596EE0"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee List"
                    android:textSize="12sp"
                    android:textColor="#FFF"/>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewEmployeeList"
            android:layout_width="50dp"
            android:layout_marginTop="24dp"
            android:layout_height="50dp"
            android:src="@drawable/c"
            android:elevation="8dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/r_3"
        android:layout_below="@+id/r_1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/markAttendenceCardView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#596EE0"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mark Attendence"
                    android:textSize="12sp"
                    android:textColor="#FFF"/>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewMarkAttendence"
            android:layout_width="50dp"
            android:layout_marginTop="24dp"
            android:layout_height="50dp"
            android:src="@drawable/b"
            android:elevation="8dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_below="@+id/r_3"
        android:id="@+id/r_4"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/salarySlipCardView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#596EE0"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salary Slip"
                    android:textSize="12sp"
                    android:textColor="#FFF"/>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cardViewSalaryslip"
            android:layout_width="50dp"
            android:layout_marginTop="24dp"
            android:layout_height="50dp"
            android:src="@drawable/d"
            android:elevation="8dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/r_3"
        android:layout_below="@+id/r_3"
        android:id="@+id/r_5"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/summaryreportCardView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#596EE0"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary Report"
                    android:textSize="12sp"
                    android:textColor="#FFF"/>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cardViewSummaryReport"
            android:layout_width="50dp"
            android:layout_marginTop="24dp"
            android:layout_height="50dp"
            android:src="@drawable/d"
            android:elevation="8dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/r_3"
        android:layout_below="@+id/r_2"
        android:id="@+id/r_6"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/allGeneratedReportCardView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#596EE0"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Generated Report"
                    android:textSize="12sp"
                    android:textColor="#FFF"/>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cardViewAllGeneratedReport"
            android:layout_width="50dp"
            android:layout_marginTop="24dp"
            android:layout_height="50dp"
            android:src="@drawable/e"
            android:elevation="8dp" />
    </RelativeLayout>



        <RelativeLayout
            android:layout_margin="10dp"
            android:id="@+id/r_7"
            android:layout_below="@+id/r_5"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/appSettingCardView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#596EE0"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Setting"
                        android:textSize="12sp"
                        android:textColor="#FFF"/>


                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cardViewAppSetting"
                android:layout_width="50dp"
                android:layout_marginTop="24dp"
                android:layout_height="50dp"
                android:src="@drawable/h"
                android:elevation="8dp" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/r_8"
        android:layout_below="@+id/r_5"
        android:layout_toRightOf="@+id/r_7"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cloudBackUpCardView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#596EE0"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloud Backup"
                    android:textSize="12sp"
                    android:textColor="#FFF"/>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cardViewCloudBackup"
            android:layout_width="50dp"
            android:layout_marginTop="24dp"
            android:layout_height="50dp"
            android:src="@drawable/a"
            android:elevation="8dp" />

    </RelativeLayout>
</RelativeLayout>